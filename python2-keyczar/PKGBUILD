_pypkg="python-keyczar"
pkgname="python2-keyczar"
pkgver=0.71c
pkgrel=1.1
pkgdesc="Toolkit for safe and simple cryptography"
arch=('any')
url="http://www.keyczar.org"
license=('APACHE')
depends=('python2-crypto' 'python2-pyasn1')
source=("https://pypi.python.org/packages/source/p/python-keyczar/$_pypkg-$pkgver.tar.gz")
sha1sums=('0ac1e85e05acac470029d1eaeece5c47d59fcc89')


package() {
  cd "$srcdir/$_pypkg-$pkgver"
  python2 setup.py install --root=$pkgdir
}

