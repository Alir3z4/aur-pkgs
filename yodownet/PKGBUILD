# Maintainer: Alireza Savand < alireza.savand with love gmail :|>

pkgname=yodownet
pkgver=2012.04.29
pkgrel=1
pkgdesc="yoDownet, The Previous Generation Graphical Download Manager, Implemented on Qt"
arch=(any)
url="http://sourceforge.net/projects/yodownet"
license=("GPLv3")
makedepends=('qt' 'make')
depends=('qt')
provides=("yodownet")
source=("http://sourceforge.net/projects/$pkgname/files/sources/$pkgname-$pkgver.tar.gz")
sha1sums=('62336a8cc419c10378fc9bcf51c3e386ca63ed1b')

build() {
        cd "$srcdir"
	lrelease yoDownet.pro || return 1
        qmake -config release \
	    TRANSLATION_PATH="/usr/share/yodownet/translations/" \
	    LICENSE_PATH="/usr/share/licenses/yodownet/" \
	    SQLSCRIPT_PATH="/usr/share/yodownet/resource/sql/"  || return 1
	make || return 1
}

package() {
        cd "$srcdir"
        make install INSTALL_ROOT=$pkgdir || return 1
}
