post_install() {
	echo "OurStat Persian English dictionary have been installed under"
	echo " /usr/lib/mdic/dictionaries/"
	echo "Now you can add the dictionary to mdic from"
	echo " 'Configure MDic->Dictionaries->Add...'"
}

post_remove() {
	echo "OurStat Persian English dictionary have been removed."
	echo "You may now want to remove it also from MDic configuration."
}
