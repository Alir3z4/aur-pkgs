post_install() {
  echo "  Add to your .vimrc file:"
  echo "filetype plugin on"
  echo "let g:pydiction_location='/usr/share/pydiction/complete-dict'"
}

post_upgrade() {
  echo "  Add to your .vimrc file:"
  echo "filetype plugin on"
